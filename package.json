{
  "name": "nihil_databases",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json dist",
    "prepare": "husky",
    "lint": "eslint --cache --fix --ext .js,.mjs,.cjs,.ts,.mts,.cts,.json,.jsonc,.json5 .",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "postinstall": "cd user && npm i"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.33.1",
    "validate-branch-name": "^1.3.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,mjs,cjs,ts,mts,cts,json,jsonc,json5}": "npm run lint"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release)/.+$",
    "errorMsg": "Branch name must be master, main, develop, feature/xxx, fix/xxx, hotfix/xxx or release/xxx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
