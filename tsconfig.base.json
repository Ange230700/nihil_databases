{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@nihil/*": ["./*"],
      "@nihil/shared": ["shared/src/index.ts"],
      "@nihil/shared/*": ["shared/src/*"],
      "@nihil/user/*": ["user/*"],
      "@nihil/post/*": ["post/*"]
    }
  }
}
