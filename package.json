{
  "name": "nihildb",
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "user",
    "post",
    "shared"
  ],
  "version": "1.0.0",
  "private": true,
  "description": "Nihil Services Databases",
  "main": "index.js",
  "scripts": {
    "publish:all:packages": "nx run-many --target=publish:package --all",
    "clean:all": "nx run-many --target=clean --all && rm -rf node_modules package-lock.json .eslintcache .nx/cache",
    "build:all": "nx run db-shared:build && nx run db-user:build && nx run db-post:build",
    "lint:all": "eslint --cache --fix && nx run-many --target=lint --all",
    "test:all": "nx run-many --target=test --all",
    "prisma:generate:all": "npm run --workspaces prisma:generate",
    "prisma:studio:user": "nx run db-user:prisma:studio",
    "prisma:studio:post": "nx run db-post:prisma:studio",
    "prisma:db:seed:all": "nx run-many --target=prisma:db:seed --projects=db-user,db-post",
    "prisma:db:push:all": "nx run-many --target=prisma:db:push --projects=db-user,db-post",
    "prisma:migrate:dev:all": "npm run --workspaces prisma:migrate:dev",
    "prisma:migrate:deploy:all": "npm run --workspaces prisma:migrate:deploy",
    "prepare": "husky",
    "dev:user": "nx run user:prisma:db:push && npm --workspace user run prisma:generate",
    "dev:post": "nx run post:prisma:db:push && npm --workspace post run prisma:generate",
    "dev:user:seed": "nx run user:prisma:db:push && npm --workspace user run prisma:db:seed",
    "dev:post:seed": "nx run post:prisma:db:push && npm --workspace post run prisma:db:seed",
    "studio:user": "nx run user:prisma:db:push && npm --workspace user run prisma:studio",
    "studio:post": "nx run post:prisma:db:push && npm --workspace post run prisma:studio",
    "copy-envs": "for d in user post; do cp -n $d/.env.sample $d/.env || true; done",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "postinstall": "node scripts/postinstall.mjs",
    "db:up": "node scripts/db-up.mjs && node scripts/wait-for-mysql.mjs",
    "db:down": "docker compose -f docker-compose.dev.yml down -v",
    "test:all:with-db": "npm run db:up && nx run-many --target=test --all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ange230700/nihil_databases.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Ange230700/nihil_databases/issues"
  },
  "homepage": "https://github.com/Ange230700/nihil_databases#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "@faker-js/faker": "^9.8.0",
    "@nx/devkit": "^21.3.9",
    "@nx/workspace": "^21.3.9",
    "@types/jest": "^30.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "nx": "^21.3.9",
    "prettier": "^3.5.3",
    "prisma": "^6.14.0",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.33.1",
    "validate-branch-name": "^1.3.2"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release|chore)/.+$",
    "errorMsg": "Branch name must be master, main, develop, feature/xxx, fix/xxx, hotfix/xxx or release/xxx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.14.0"
  }
}
