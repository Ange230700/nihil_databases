{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "nihildb/*": ["./*"],
      "nihildbshared": ["shared/src/index.ts"],
      "nihildbshared/*": ["shared/src/*"],
      "nihildbuser/*": ["user/*"],
      "nihildbpost/*": ["post/*"]
    }
  }
}
